# Configuration file

##########################################################################################################
# worldgen chances
#--------------------------------------------------------------------------------------------------------#
# The chance that each worldgen will generate. You can set this to 0 to disable the worldgen or use the dimension black/white list. 1 = all over, 0.04 fairly rare.
##########################################################################################################

"worldgen chances" {
    # Ooze only generates on the surface when in COLD and SNOWY tagged biomes.
    D:"Acid Lakes Surface Chance"=0.1
    D:"Acid Lakes Underground Chance"=0.04
    D:"Moglava Lakes Surface Chance"=0.0
    D:"Moglava Lakes Underground Chance"=0.04

    # Ooze only generates on the surface when in COLD and SNOWY tagged biomes.
    D:"Ooze Lakes Surface Chance"=0.1
    D:"Ooze Lakes Underground Chance"=0.04

    # Ooze only generates on the surface when in COLD and SNOWY tagged biomes.
    D:"Poison Lakes Surface Chance"=0.1
    D:"Poison Lakes Underground Chance"=0.04
    D:"Pure Lava Lakes Surface Chance"=0.0
    D:"Pure Lava Lakes Underground Chance"=0.04
}


"worldgen dimensions" {
    S:"Acid Lakes Dimensions"=-1, 1
    B:"Acid Lakes Dimensions Whitelist Mode"=false
    S:"Moglava Lakes Dimensions"=-1
    B:"Moglava Lakes Dimensions Whitelist Mode"=true
    S:"Ooze Lakes Dimensions"=-1, 1
    B:"Ooze Lakes Dimensions Whitelist Mode"=false
    S:"Poison Lakes Dimensions"=-1, 1
    B:"Poison Lakes Dimensions Whitelist Mode"=false
    S:"Pure Lava Lakes Dimensions"=-1
    B:"Pure Lava Lakes Dimensions Whitelist Mode"=true
}


